{
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.cursorSurroundingLines": 10,
    "editor.fontFamily": "'fira code',  'firacode nerd font', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 12.5,
    "editor.hover.delay": 600,
    "editor.inlineSuggest.enabled": true,
    "editor.lineHeight": 1.28,
    "editor.minimap.enabled": false,
    "editor.quickSuggestionsDelay": 0,
    "editor.renderWhitespace": "none",
    "editor.scrollBeyondLastLine": true,
    "editor.smoothScrolling": true,
    "editor.stickyScroll.enabled": true,
    "editor.suggest.filterGraceful": true,
    "editor.suggest.localityBonus": true,
    "editor.suggest.preview": true,
    "editor.suggest.snippetsPreventQuickSuggestions": true,
    "editor.tabSize": 2,
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoSave": "onWindowChange",
    "git.autoRepositoryDetection": false,
    "git.ignoreLimitWarning": true,
    "markdown.preview.scrollEditorWithPreview": false,
    "search.followSymlinks": false,
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "window.customMenuBarAltFocus": false,
    "window.menuBarVisibility": "toggle",
    "window.restoreWindows": "none",
    "workbench.editor.tabCloseButton": "off",
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.wrapTabs": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.list.smoothScrolling": true,
    "workbench.startupEditor": "none",

    // theme
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "editor.tokenColorCustomizations": {
        "[Gruvbox Dark Hard]": {
            "textMateRules": [
                {
                    "scope": "support.class",
                    "settings": { "foreground": "#83a598" }
                },
                {
                    "scope": "comment",
                    // prevent italic comments
                    "settings": { "fontStyle": "" }
                },
            ],
        },
    },
    "workbench.colorCustomizations": {
        "[Gruvbox Dark Hard]": {
            "statusBar.debuggingBackground": "#385549",
            "statusBar.debuggingForeground": "#ebdbb2",
            "peekViewEditor.matchHighlightBackground": "#385549"
        },
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f",
    },

    // dart & flutter
    "dart.closingLabels": false,
    "dart.debugExternalPackageLibraries": true,
    "dart.debugSdkLibraries": true,
    "dart.promptToGetPackages": false,
    "dart.showInspectorNotificationsForWidgetErrors": false,
    "dart.showSkippedTests": false,
    "dart.warnWhenEditingFilesOutsideWorkspace": false,
    "dart.runPubGetOnPubspecChanges": "never",
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.formatOnPaste": true,
        "editor.rulers": [ 80 ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.semanticHighlighting.enabled": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false,
        "editor.codeActionsOnSave": [
            "source.organizeImports",
            "source.fixAll",
        ],

        "rewrap.autoWrap.enabled": true,
    },

    // rust
    "[rust]": {
        "editor.formatOnSave": true

    },
    "rust-analyzer.inlayHints.chainingHints.enable": false,
    "rust-analyzer.inlayHints.closingBraceHints.enable": false,
    "rust-analyzer.inlayHints.expressionAdjustmentHints.hideOutsideUnsafe": true,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.inlayHints.typeHints.enable": false,

    // extensions
    "extensions.ignoreRecommendations": true,
    "cSpell.allowCompoundWords": true,
    "cSpell.diagnosticLevel": "Hint",
    "cSpell.language": "en,en-US",
}
