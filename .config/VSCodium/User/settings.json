{
    "debug.toolBarLocation": "commandCenter",
    "editor.fontFamily": "monospace",
    "editor.fontLigatures": "'calt', 'liga', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09'",
    "editor.lineHeight": 1.3,
    "editor.minimap.enabled": false,
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoSave": "onWindowChange",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "telemetry.telemetryLevel": "off",
    "window.customMenuBarAltFocus": false,
    "window.density.editorTabHeight": "compact",
    "window.restoreWindows": "none",
    "workbench.editor.enablePreview": false,
    "workbench.editor.tabActionCloseVisibility": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.wrapTabs": true,
    "workbench.startupEditor": "none",

    // theme
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "workbench.iconTheme": "material-icon-theme",
    "editor.tokenColorCustomizations": {
        "[Gruvbox Dark Hard]": {
            "textMateRules": [
                {
                    "scope": "support.class",
                    "settings": { "foreground": "#83a598" },
                },
                {
                    "scope": "comment",
                    // prevent italic comments
                    "settings": { "fontStyle": "" },
                },
            ],
        },
    },
    "workbench.colorCustomizations": {
        "[Gruvbox Dark Hard]": {
            "statusBar.background": "#1d2021",
            "statusBar.noFolderBackground": "#1d2021",
            "statusBar.debuggingBackground": "#005f5f",
            "statusBar.debuggingForeground": "#ebdbb2",
            "peekViewEditor.matchHighlightBackground": "#458588",
        },
    },

    // dart & flutter
    "dart.closingLabels": false,
    "dart.debugExternalPackageLibraries": true,
    "dart.debugSdkLibraries": true,
    "dart.promptToGetPackages": false,
    "dart.runPubGetOnPubspecChanges": "never",
    "dart.showInspectorNotificationsForWidgetErrors": false,
    "dart.showSkippedTests": false,
    "dart.warnWhenEditingFilesOutsideWorkspace": false,
    "[dart]": {
		"editor.formatOnPaste": true,
		"editor.formatOnSave": true,
		"editor.formatOnType": true,
		"editor.rulers": [80],
		"editor.selectionHighlight": false,
		"editor.suggestSelection": "first",
		"editor.tabCompletion": "onlySnippets",
		"editor.wordBasedSuggestions": "off",
        "editor.semanticHighlighting.enabled": false,
        "editor.codeActionsOnSave":  {
            "source.organizeImports": "explicit",
        },

        "rewrap.autoWrap.enabled": true,
	},
    
    // rust
    "rust-analyzer.inlayHints.chainingHints.enable": false,
    "rust-analyzer.inlayHints.closingBraceHints.enable": false,
    "rust-analyzer.inlayHints.genericParameterHints.const.enable": false,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    // "rust-analyzer.inlayHints.renderColons": false,
    // "rust-analyzer.inlayHints.typeHints.enable": false,
    "[rust]": {
		"editor.formatOnPaste": true,
		"editor.formatOnSave": true,
		"editor.formatOnType": true,
        "editor.codeActionsOnSave":  {
            "source.organizeImports": "explicit",
        },

    },

    // extensions
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "cSpell.allowCompoundWords": true,
    "cSpell.diagnosticLevel": "Hint",
    "cSpell.language": "en,en-US",
    "extensions.ignoreRecommendations": true,
    "vscode-neovim.ctrlKeysForNormalMode": [ "a", "c", "d", "e", "h", "i", "j", "k", "l", "m", "o", "r", "t", "u", "v", "y", "z", "/", "]", "right", "left", "up", "down", "backspace", "delete" ],
    "vscode-neovim.ctrlKeysForInsertMode": [
        "a",
        "c",
        "d",
        "h",
        "j",
        "m",
        "o",
        "r",
        "t",
        "u",
        "w"
    ],
    "git.openRepositoryInParentFolders": "always",
    "editor.bracketPairColorization.enabled": false,
    "window.customTitleBarVisibility": "windowed",
    "window.menuBarVisibility": "toggle",
    "keyboard.dispatch": "keyCode",
    "editor.fontSize": 13,
}
